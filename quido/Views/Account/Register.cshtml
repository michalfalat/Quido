@model quido.Models.RegisterViewModel
@{
    ViewBag.Title = "Registrace";
}
@*<div class="jumbotron" style="background-color:#F2F2F2;">*@

<div class="jumbotron" style="border-radius: 3px;border: 1px solid #DDDDDD;background-color:white;padding-left:20px;padding-right:20px;padding-top:20px;padding-bottom:10px; margin-top:15px;">
    <div class="container">
        <div class="col-lg-12" style="background-color:white;min-height:550px;">
    <h2>@ViewBag.Title</h2>
    <h4>Vytvořit nový účet</h4>
            <div class="col-md-7 col-lg-7">
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form", @style = "padding-left:auto;padding-right:auto;" }))
                {
                    @Html.AntiForgeryToken()

                   
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(m => m.Username, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Nationality, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.DropDownListFor(m => m.Nationality, new SelectList(Model.myCountries, "Key", "Value", "CZ"), new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Sex, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.DropDownListFor(m => m.Sex, new SelectList(Model.mySex, "Key", "Value", "male"), new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.YearOfBirth, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.DropDownListFor(m => m.YearOfBirth, new SelectList(Model.myYears, "Key", "Value", "1995"), new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" class="btn btn-default" value="Registrovat" />
                        </div>
                    </div>

                }
            </div>
            <div class="col-md-5 col-lg-5">
                <div style="background-color:white;margin-left:auto;margin-right:auto; margin-bottom:20px; font-size:15px;">
                    <h3><span class="glyphicon glyphicon-info-sign"></span> S registrací získáte:</h3>
                     - Možnost přidávat vlastní otázky<br />
                     - Správu vlastních otázek<br />
                     - Veškeré nové funkce budete mít dostupné jako první</div>
            </div>
            
    </div>
    
    </div>
    </div>
    @*</div>*@

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }

